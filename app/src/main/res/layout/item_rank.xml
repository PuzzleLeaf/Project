<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rank_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/sam1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참이슬(Classic)"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.1도"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/star_size"
                android:adjustViewBounds="true"
                android:src="@drawable/starfull" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/star_size"
                android:adjustViewBounds="true"
                android:src="@drawable/starfull" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/star_size"
                android:adjustViewBounds="true"
                android:src="@drawable/starhalf" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/star_size"
                android:adjustViewBounds="true"
                android:src="@drawable/starempty" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/star_size"
                android:adjustViewBounds="true"
                android:src="@drawable/starempty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="3.50"
                android:textColor="#ffbc3c"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(n명)"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
