<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tistory.puzzleleaf.rankofalcohol">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity" android:theme="@style/Theme.AppCompat.Translucent" android:screenOrientation="portrait"/>
        <activity android:name=".rank.RankActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".rank.RankDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".rank.RankReviewActivity" android:screenOrientation="portrait"/>
        <activity android:name=".rank.RankReviewRegisterActivity" android:screenOrientation="portrait"/>

        <service android:name=".service.UserService"/>
    </application>

</manifest>